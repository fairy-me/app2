<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cj"
            android:text="成绩分析"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"></TextView>

        <Button
            android:id="@+id/blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/cj"
            android:background="@drawable/yan"></Button>
        <Button
            android:id="@+id/baocun"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/zhuye"
            android:layout_below="@+id/cj"
            android:layout_alignParentRight="true"></Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:layout_below="@+id/one"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wa"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/n"></ImageView>
        <TextView
            android:id="@+id/zuihou"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_below="@+id/wa"
            android:background="@drawable/bj"
            android:text="继续保持，越努力越幸运"
            android:gravity="center"
            android:textSize="15dp"></TextView>
    </RelativeLayout>
</RelativeLayout>